<div class="container-fluid">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="payment-ways-container">
        <center>
          <h3> Log in</h3>
        </center>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true, label: false, input_html: {class: 'form-control'}, placeholder: "example@email.com" %>
              <%= f.input :password, required: false, label: false, input_html: {class: 'form-control'}, placeholder: "Password" %>
            </div>
            <div class="form-actions">
              <center>
                <%= f.button :submit, "Entrar", class: "btn btn-success" %>
                <hr />
                <%= render "devise/shared/links" %>
              </center>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>